{
  "dependencies": {
    "@next/eslint-plugin-next": "^15.3.1",
    "async-retry": "1.3.3",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "next": "15.3.1",
    "node": "23.11.0",
    "node-pg-migrate": "7.9.1",
    "npm-check-updates": "18.0.1",
    "on-exit": "^1.0.1",
    "pg": "8.15.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "scripts": {
    "dev": "cross-env concurrently --handle-input --kill-others \"node infra/scripts/cleanup.js\" \"npm run dev:services\"",
    "dev:services": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && npm run services:wait:database && concurrently -n next,jest --hide next -k --success first \"next dev\" \"jest --runInBand\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down --remove-orphans",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migrations:down": "node-pg-migrate -m infra/migrations down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.13.0",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
